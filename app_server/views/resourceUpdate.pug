extends layout

include _includes/sharedHTMLfunctions

block content
 .resource-add-grid
   .resource-add-box-a.resource-add-a
     .resource-info-sub-box.resource-info-sub-a
       h1.header_space.text_black.fixed Update Resource
       a(href='/resource/' + sourceDetails.ID, style='color:white')
         span.spacing.hi-icon.hi-icon-arrow-item
           i.fa.fa-arrow-left.fa-2x
       a(href='/resource/{{sourceDetails._id}}', style='color:white')
         span.spacing.hi-icon.hi-icon-list
           i.fa.fa-list.fa-2x
   
   .resource-add-box-b.resource-add-b
     form#addResource.uk-form.uk-form-horizontal(action="", method='post', role='form')
       if(error == 'val')
         h1.title_orange.alert(role='alert') All Fields required, please try again.
        
       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='title') Title
         .uk-form-controls
           input#title.uk-width-1-2(type='text', name='title', value=sourceDetails.Title)

       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='category') Category
         .uk-form-controls
           input#category.uk-width-1-2(type='text', placeholder='Category', name='category',value=sourceDetails.Category )

       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='type') Source Type
         .uk-form-controls
           select#type(name='type')
             option(selected='') #{sourceDetails.Type}
             option(value='Article') Article
             option(value='Book') Book
             option(value='Journal') Journal
             option(value='Video') Video
             option(value='Blog') Blog
             option(value='Encylopdia') Encyclopedia
             option(value='Website') Website
             option(value='Dictionary') Dictionary
             option(value='Commentary') Commentary

       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='source') Source Link
         .uk-form-controls
           input#source.uk-width-1-2(type='text',value=sourceDetails.Source ,name='source')

       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='rating') Rating
         .uk-form-controls
           select#rating(name='rating')
            option(selected='') #{sourceDetails.Rating}
             option(value='1') 1
             option(value='2') 2
             option(value='3') 3
             option(value='4') 4
             option(value='5') 5

       .uk-form-row.space
         label.uk-form-label.title_orange.resourceUpdateTitleFont(for='description') Description
         .uk-form-controls
           textarea#description.textarea_content(cols='', rows='', type='text', name='description') #{sourceDetails.Description}

       .uk-form-row.space
         button.uk-button(type='submit') Update