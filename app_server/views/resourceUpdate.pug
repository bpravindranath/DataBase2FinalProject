extends layout

include _includes/sharedHTMLfunctions

block content
    a(href='/resource/', style='color:white')
      span.hi-icon.hi-icon-arrow
        i.fa.fa-arrow-left.fa-2x
    a(href='/resource/' + sourceDetails.ID, style='color:white')
      span.icon_font.spacing.hi-icon.hi-icon-info
        i.fa.fa-arrow-right.fa-2x

    form.form-sign(action="", method='post', role='form')
        if(error == 'val')
            h1.title_orange.alert(role='alert') All Fields required, please try again.
        .text-center.mb-4
            img.mb-4(src='https://getbootstrap.com/assets/brand/bootstrap-solid.svg', alt='', width='72', height='72')
            h1.h3.mb-3.font-weight-normal Update Book
        
        .form(role='form')
            .form-group.row
                label.col-2.col-form-label(for='title') Title
                .col-10
                    input#example-text-input.form-control(type='text', name='title', value=sourceDetails.Title)
            hr(size='10')
            .form-group.row
                label.col-2.col-form-label(for='category') Category
                .col-10
                    input#example-search-input.form-control(type='text', placeholder='Category', name='category',value=sourceDetails.Category)
            hr(size='10')
            .form-group.row
                label.col-2.col-form-label(for='example-email-input') Email
                .col-10
                    select(name='type')
                        option(selected='') #{sourceDetails.Type}
                        option(value='Article') Article
                        option(value='Book') Book
                        option(value='Journal') Journal
                        option(value='Video') Video
                        option(value='Blog') Blog
                        option(value='Encylopdia') Encyclopedia
                        option(value='Website') Website
                        option(value='Dictionary') Dictionary
                        option(value='Commentary') Commentary
            hr(size='10')      
            .form-group.row
                label.col-2.col-form-label(for='source') Source 
                .col-10
                    input#example-url-input.form-control(type='text',value=sourceDetails.Source ,name='source')

            hr(size='10')
            .form-group.row
                label.col-2.col-form-label(for='rating') Rating
                .col-10
                    select(name='rating')
                        option(selected='') #{sourceDetails.Rating}
                        option(value='1') 1
                        option(value='2') 2
                        option(value='3') 3
                        option(value='4') 4
                        option(value='5') 5
            
            hr(size='10')      
            .form-group.row
                label.col-2.col-form-label(for='description') Description
                .col-10
                    textarea(cols='', rows='', type='text', name='description') #{sourceDetails.Description}
            
            button.submitbutton(type='submit') Submit
